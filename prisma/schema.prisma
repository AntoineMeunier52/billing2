// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DB_URI")
}

enum Role {
  SUPERADMIN
  ADMIN
  USER
}

model User {
  id    Int     @id @default(autoincrement())
  email String  @unique
  password String
  name String
  role Role @default(USER)
  resetToken String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

// defining the customer object
model Customer {
  id  Int @id @default(autoincrement())
  name  String @unique
  address String
  city String
  province String
  postalCode Int

  // defining the pourcentage to add on the sip line price
  natioMobPourcent Float
  natioFixPourcent Float
  interMobPourcent Float
  interFixPourcent Float

  ddiPrice Float

  // a cumstomer can have multiple subscriptions
  subscriptions Subscription[]

  // a customer can have multiple sip line
  sipLine SipLine[]

  // a customer can have multple ddi name
  ddiName DdiName[]

  // a customer can have mutliple month generation
  monthGeneration MonthlyCdrSummary[]
}

model Subscription {
  id Int @id @default(autoincrement())
  definition String
  price Int

  // relation
  customer Customer @relation(fields: [customerId], references: [id])
  customerId Int
}

//
// the description fields make references to the desciption fields in the Sewan configuration (see with the UC_TEAMS for more information about it)
//
// if a Sip group is created you need to enter the Profile_name of the group see the Sewan configuration (see with the UC_TEAMS for more information about it)
//
model SipLine {
  id Int @id @default(autoincrement())
  descriptionName String @unique
  
  //relation
  customer Customer @relation(fields: [customerId], references: [id])
  customerId Int
}

model DdiName {
  id Int @id @default(autoincrement())
  descriptionName String @unique

  // relation
  customer Customer @relation(fields: [customerId], references: [id])
  customerId Int
}

model MonthlyCdrSummary {
  id               Int      @id @default(autoincrement())
  customerId       Int
  month            DateTime   // 1er jour du mois 00:00:00
  callCount        Int
  totalDurationSec Int
  totalBaseCost    Decimal @db.Decimal(18,6)
  totalBilledCost  Decimal @db.Decimal(18,6)

  // breakdown par type d’appel (base = opérateur, bill = facturé client)
  base_natio_mob   Decimal @db.Decimal(18,6)
  base_natio_fix   Decimal @db.Decimal(18,6)
  base_inter_mob   Decimal @db.Decimal(18,6)
  base_inter_fix   Decimal @db.Decimal(18,6)
  bill_natio_mob   Decimal @db.Decimal(18,6)
  bill_natio_fix   Decimal @db.Decimal(18,6)
  bill_inter_mob   Decimal @db.Decimal(18,6)
  bill_inter_fix   Decimal @db.Decimal(18,6)
  count_natio_mob Int
  count_natio_fix Int
  count_inter_mob Int
  count_inter_fix Int
  time_natio_mob Int
  time_natio_fix Int
  time_inter_mob Int
  time_inter_fix Int

  customer Customer @relation(fields: [customerId], references: [id])

  @@unique([customerId, month], name: "customerId_month")
  @@index([month])
}